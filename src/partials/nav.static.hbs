<button id="menu-toggle">Menu</button>
<nav id="primary-nav">
  <ul class="nav-menu">
  {{#each nav-item}}
    <li class="nav-item{{#ifEq unique-name ../current-nav-item}} current{{else}}{{#ifEq name ../current-nav-item}} current{{else}}{{#if subnav-group}}{{#each subnav-group}}{{#each subnav-item}}{{#ifEq unique-name ../../../current-nav-item}} current{{else}}{{#ifEq name ../../../current-nav-item}} current{{/ifEq}}{{/ifEq}}{{/each}}{{/each}}{{/if}}{{/ifEq}}{{/ifEq}}">
      <a href="{{#if url}}{{url}}{{~else}}#{{/if~}}">{{~name~}}</a>
      {{#if subnav-group}}
        {{#each subnav-group}}
        <div class="sub-nav">
          <ul>
          {{#each subnav-item}}
                <li {{#ifEq unique-name ../../../current-nav-item}}class="current"{{else}}{{#ifEq name ../../../current-nav-item}}class="current"{{/ifEq}}{{/ifEq}}>
                  <a href="{{#if url}}{{url}}{{~else}}#{{/if~}}">{{~name~}}</a>
                </li>
          {{/each}}
          </ul>
        </div>
        {{/each}}
      {{/if}}
    </li>
  {{/each}}
  </ul>
</nav>
